@page "/admin"
@using SchoolHallBooking.Models
@using SchoolHallBooking.Services
@inject IBookingService BookingService
@inject IAuthService AuthService
@inject IExportService ExportService
@inject ILogger<Admin> Logger
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>الإدارة - إدارة حجوزات القاعات</PageTitle>

<script>
    window.downloadFile = function (dataUrl, fileName) {
        const link = document.createElement('a');
        link.href = dataUrl;
        link.download = fileName;
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);
    };
</script>

@if (!isAdminLoggedIn)
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card mt-5">
                    <div class="card-header">
                        <h3 class="text-center">الوصول مرفوض</h3>
                    </div>
                    <div class="card-body text-center">
                        <p>تحتاج إلى تسجيل الدخول كمدير للوصول إلى هذه الصفحة.</p>
                        <a href="/login" class="btn btn-primary">اذهب إلى تسجيل الدخول</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container-fluid">
        <div class="row mb-3">
            <div class="col-12 text-end">
                <span class="text-muted">مرحباً، المدير</span>
                <button class="btn btn-outline-secondary btn-sm ms-2" @onclick="Logout">تسجيل الخروج</button>
            </div>
        </div>
    <div class="row">
        <div class="col-12">
            <h1 class="display-4 text-center mb-4">لوحة الإدارة</h1>
            <p class="lead text-center mb-5">إدارة حجوزات القاعات وعرض جميع الحجوزات</p>
        </div>
    </div>

    <!-- Filtering Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3>فلترة الحجوزات</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <label for="filterHall" class="form-label">فلترة حسب القاعة:</label>
                            <select class="form-select" id="filterHall" @bind="filterHallId">
                                <option value="">جميع القاعات</option>
                                @foreach (var hall in availableHalls)
                                {
                                    <option value="@hall.Id">@hall.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="filterFromDate" class="form-label">من تاريخ:</label>
                            <input type="date" class="form-control" id="filterFromDate" @bind="filterFromDate" />
                        </div>
                        <div class="col-md-3">
                            <label for="filterToDate" class="form-label">إلى تاريخ:</label>
                            <input type="date" class="form-control" id="filterToDate" @bind="filterToDate" />
                        </div>
                        <div class="col-md-3 d-flex align-items-end">
                            <button class="btn btn-primary me-2" @onclick="ApplyFilters">تطبيق الفلترة</button>
                            <button class="btn btn-outline-secondary" @onclick="ClearFilters">مسح الفلترة</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Statistics Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3>إحصائيات الحجوزات</h3>
                    <button class="btn btn-outline-primary btn-sm" @onclick="LoadStatistics">
                        <i class="bi bi-arrow-clockwise"></i> تحديث الإحصائيات
                    </button>
                </div>
                <div class="card-body">
                    @if (bookingStatistics.Any() || sectionStatistics.Any())
                    {
                        <div class="row">
                            <div class="col-md-4">
                                <h5>عدد الحجوزات لكل قاعة:</h5>
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>اسم القاعة</th>
                                                <th>عدد الحجوزات</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var stat in bookingStatistics.OrderByDescending(x => x.Value))
                                            {
                                                <tr>
                                                    <td>@stat.Key</td>
                                                    <td>
                                                        <span class="badge bg-primary">@stat.Value</span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <h5>عدد الحجوزات لكل قسم:</h5>
                                <div class="table-responsive">
                                    <table class="table table-sm">
                                        <thead>
                                            <tr>
                                                <th>اسم القسم</th>
                                                <th>عدد الحجوزات</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var stat in sectionStatistics.OrderByDescending(x => x.Value))
                                            {
                                                <tr>
                                                    <td>@stat.Key</td>
                                                    <td>
                                                        <span class="badge bg-success">@stat.Value</span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <h5>ملخص الإحصائيات:</h5>
                                <div class="row">
                                    <div class="col-6">
                                        <div class="card bg-success text-white">
                                            <div class="card-body text-center">
                                                <h4>@mostBookedHall</h4>
                                                <small>الأكثر حجزاً</small>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="card bg-warning text-dark">
                                            <div class="card-body text-center">
                                                <h4>@leastBookedHall</h4>
                                                <small>الأقل حجزاً</small>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <div class="row">
                                        <div class="col-6">
                                            <div class="card bg-info text-white">
                                                <div class="card-body text-center">
                                                    <h4>@mostActiveSection</h4>
                                                    <small>الأكثر نشاطاً</small>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="card bg-secondary text-white">
                                                <div class="card-body text-center">
                                                    <h4>@leastActiveSection</h4>
                                                    <small>الأقل نشاطاً</small>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="mt-2">
                                    <div class="card bg-primary text-white">
                                        <div class="card-body text-center">
                                            <h4>@totalBookings</h4>
                                            <small>إجمالي الحجوزات</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <p>لا توجد إحصائيات متاحة حالياً.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3>جميع الحجوزات</h3>
                    <div class="btn-group" role="group">
                        <button class="btn btn-success" @onclick="ExportToExcel" disabled="@isExporting">
                            @if (isExporting)
                            {
                                <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                            }
                            <i class="bi bi-file-earmark-excel"></i> تحميل كملف Excel
                        </button>
                        <button class="btn btn-primary" @onclick="LoadAllBookings">تحديث جميع الحجوزات</button>
                    </div>
                </div>
                <div class="card-body">

                    @if (isLoading)
                    {
                        <div class="text-center">
                            <div class="spinner-border" role="status">
                                <span class="visually-hidden">جاري التحميل...</span>
                            </div>
                        </div>
                    }
                    else if (allBookings.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover" id="bookingsTable">
                                <thead class="table-dark">
                                    <tr>
                                        <th>اسم القاعة</th>
                                        <th>المدرس</th>
                                        <th>القسم</th>
                                        <th>الحصة</th>
                                        <th>تاريخ الحجز</th>
                                        <th>تاريخ الإنشاء</th>
                                        <th class="no-print">الإجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var booking in allBookings)
                                    {
                                        <tr>
                                            <td>@booking.Hall.Name</td>
                                            <td>@booking.TeacherName</td>
                                            <td>@booking.Section</td>
                                            <td>الحصة @booking.Period</td>
                                            <td>@booking.BookingDate.ToString("yyyy/MM/dd")</td>
                                            <td>@booking.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                                            <td class="no-print">
                                                <button class="btn btn-danger btn-sm" @onclick="() => DeleteBooking(booking.Id)">
                                                    حذف
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <h5>لا توجد حجوزات</h5>
                            <p>لم يتم العثور على حجوزات للتاريخ المحدد.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (showDeleteModal)
{
    <div class="modal show d-block" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">تأكيد الحذف</h5>
                    <button type="button" class="btn-close" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p>هل أنت متأكد من حذف هذا الحجز؟</p>
                    <p><strong>القاعة:</strong> @selectedBookingHallName</p>
                    <p><strong>الحصة:</strong> @selectedBookingPeriod</p>
                    <p><strong>التاريخ:</strong> @selectedBookingDate.ToString("yyyy/MM/dd")</p>
                    <p><strong>المدرس:</strong> @selectedBookingTeacher</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete">إلغاء</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete">حذف الحجز</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop show"></div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = string.Empty"></button>
    </div>
}

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = string.Empty"></button>
    </div>
}

@code {
    private List<Booking> allBookings = new();
    private List<Hall> availableHalls = new();
    private bool isLoading = false;
    private bool showDeleteModal = false;
    private int selectedBookingId;
    private string selectedBookingHallName = string.Empty;
    private string selectedBookingTeacher = string.Empty;
    private int selectedBookingPeriod;
    private DateTime selectedBookingDate;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;
    private bool isAdminLoggedIn = false;
    private Dictionary<string, int> bookingStatistics = new();
    private Dictionary<string, int> sectionStatistics = new();
    private string mostBookedHall = string.Empty;
    private string leastBookedHall = string.Empty;
    private string mostActiveSection = string.Empty;
    private string leastActiveSection = string.Empty;
    private int totalBookings = 0;
    
    // Filter variables
    private int? filterHallId = null;
    private DateTime? filterFromDate = null;
    private DateTime? filterToDate = null;
    
    // Export/Print variables
    private bool isExporting = false;

    protected override async Task OnInitializedAsync()
    {
        isAdminLoggedIn = await AuthService.IsAdminLoggedIn();
        if (isAdminLoggedIn)
        {
            await LoadHalls();
            await LoadAllBookings();
            await LoadStatistics();
        }
        StateHasChanged(); // Force re-render after async check
    }

    private async Task LoadAllBookings()
    {
        try
        {
            isLoading = true;
            allBookings = await BookingService.GetAllBookingsAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading all bookings");
            errorMessage = "خطأ في تحميل الحجوزات. يرجى المحاولة مرة أخرى.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void DeleteBooking(int bookingId)
    {
        var booking = allBookings.FirstOrDefault(b => b.Id == bookingId);
        if (booking != null)
        {
            selectedBookingId = bookingId;
            selectedBookingHallName = booking.Hall.Name;
            selectedBookingTeacher = booking.TeacherName;
            selectedBookingPeriod = booking.Period;
            selectedBookingDate = booking.BookingDate;
            showDeleteModal = true;
        }
    }

    private async Task ConfirmDelete()
    {
        try
        {
            await BookingService.DeleteBookingAsync(selectedBookingId);
            successMessage = "تم حذف الحجز بنجاح.";
            
            showDeleteModal = false;
            await LoadAllBookings();
        }
        catch (ArgumentException ex)
        {
            errorMessage = ex.Message;
            showDeleteModal = false;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting booking");
            errorMessage = "خطأ في حذف الحجز. يرجى المحاولة مرة أخرى.";
            showDeleteModal = false;
        }
    }

    private void CancelDelete()
    {
        showDeleteModal = false;
        selectedBookingId = 0;
        selectedBookingHallName = string.Empty;
        selectedBookingTeacher = string.Empty;
    }

    private async Task LoadStatistics()
    {
        try
        {
            bookingStatistics = await BookingService.GetHallBookingStatisticsAsync();
            sectionStatistics = await BookingService.GetSectionBookingStatisticsAsync();
            
            if (bookingStatistics.Any())
            {
                totalBookings = bookingStatistics.Values.Sum();
                mostBookedHall = bookingStatistics.OrderByDescending(x => x.Value).First().Key;
                leastBookedHall = bookingStatistics.OrderBy(x => x.Value).First().Key;
            }
            else
            {
                totalBookings = 0;
                mostBookedHall = "لا توجد حجوزات";
                leastBookedHall = "لا توجد حجوزات";
            }

            if (sectionStatistics.Any())
            {
                mostActiveSection = sectionStatistics.OrderByDescending(x => x.Value).First().Key;
                leastActiveSection = sectionStatistics.OrderBy(x => x.Value).First().Key;
            }
            else
            {
                mostActiveSection = "لا توجد حجوزات";
                leastActiveSection = "لا توجد حجوزات";
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading booking statistics");
            errorMessage = "خطأ في تحميل الإحصائيات. يرجى المحاولة مرة أخرى.";
        }
    }

    private async Task LoadHalls()
    {
        try
        {
            availableHalls = await BookingService.GetAvailableHallsAsync(DateTime.Today);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading halls");
            errorMessage = "خطأ في تحميل القاعات. يرجى المحاولة مرة أخرى.";
        }
    }

    private async Task ApplyFilters()
    {
        try
        {
            isLoading = true;
            allBookings = await BookingService.GetFilteredBookingsAsync(filterHallId, filterFromDate, filterToDate);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error applying filters");
            errorMessage = "خطأ في تطبيق الفلترة. يرجى المحاولة مرة أخرى.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ClearFilters()
    {
        filterHallId = null;
        filterFromDate = null;
        filterToDate = null;
        await LoadAllBookings();
    }

    private async Task Logout()
    {
        await AuthService.SetAdminLoggedIn(false);
        Navigation.NavigateTo("/");
    }

    private async Task ExportToExcel()
    {
        try
        {
            isExporting = true;
            StateHasChanged();

            // Get the current filtered bookings
            var bookingsToExport = allBookings;
            
            // If no bookings to export, show message
            if (!bookingsToExport.Any())
            {
                errorMessage = "لا توجد حجوزات للتصدير.";
                return;
            }

            // Generate Excel file
            var excelData = await ExportService.ExportToExcelAsync(bookingsToExport);
            var fileName = ExportService.GenerateFileName();

            // Convert to base64 for download
            var base64 = Convert.ToBase64String(excelData);
            var dataUrl = $"data:application/vnd.openxmlformats-officedocument.spreadsheetml.sheet;base64,{base64}";

            // Trigger download using JavaScript
            await JSRuntime.InvokeVoidAsync("downloadFile", dataUrl, fileName);
            
            successMessage = "تم تصدير البيانات بنجاح.";
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error exporting to Excel");
            errorMessage = "خطأ في تصدير البيانات. يرجى المحاولة مرة أخرى.";
        }
        finally
        {
            isExporting = false;
            StateHasChanged();
        }
    }

}
}
